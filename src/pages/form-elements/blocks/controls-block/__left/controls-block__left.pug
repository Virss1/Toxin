          'гость',
          'гостя',
          'гостей'
        ]
      },
      {
        name: 'дети',
        maxcount: '5'
      },
      {
        name: 'младенцы',
        maxcount: '6',
        declensions: [
          'младенец',
          'младенца',
          'младенцев'
        ]
      }
    ]
  })
  +textField({
    class: 'text-field_masked',
    title: 'masked text field',
    placeholder: 'ДД.ММ.ГГГГ',
    description: 'default'
  })
  .control-container_row
    .control-container
      h3.control-container__title date dropdown
      +dateDropdown('date1', true)
