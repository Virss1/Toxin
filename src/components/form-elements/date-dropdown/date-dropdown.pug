mixin dateDropdown(options)
  - var randID = Math.floor(Math.random() * (1 - 1000) + 1000)
  .date-dropdown.control-container.control-container_row
    input.date-dropdown__input_fake.datepicker-here(
      type="text"
      data-classes=`calendar-${randID}`
      data-keyboard-nav="false"
      data-select-date=options.selectDate
      readonly
    )
    each val in [1, 2]
      .control-container
        h3.control-container__title #{options[`title${val}`] || "date dropdown"}
        .date-dropdown__container
          button.date-dropdown__arrow.material-icons expand_more
          input.date-dropdown__input(type="text" class="date-" + val placeholder="ДД.ММ.ГГГГ" readonly)
