include /form-elements/control-caption/control-caption

//- options: {
      type: "string",
      title: "string",
      placeholder: "string",
      state: "string",
      isForceHoverStyle: boolean,
      isMasked: boolean,
      value: "string"
    }
mixin text-field(options)
  -
    var inputModifierClassName = "text-field"
    inputModifierClassName += options.isMasked ? " text-field__input_masked" : ""
    inputModifierClassName += options.isSubscription ? " text-field__input_subscription" : ""
    inputModifierClassName += options.isForceHoverStyle ? " text-field__input_force-focus-hover" : ""

  +control-caption({
    title: options.title,
    state: options.state,
  })
  .text-field(
    class=options.isSubscription ? "text-field_subscription" : ""
  )
    input.text-field__input.js-text-field__input(
      class=inputModifierClassName
      type=options.type || "text"
      placeholder=options.placeholder
      value=options.value
      maxlength=options.isMasked ? "10" : ""
    )
    if options.isSubscription
      button.text-field_subscription__arrow.material-icons(type="button") arrow_forward