include /form-elements/checkbox/checkbox

//-
  options: {
    title: "string",
    isOpened: boolean,
    checkboxes: [
      { title: "string", isChecked: boolean },
    ]
  }

mixin expandableCheckboxList(options)
  .expandable-checkbox-list(class=options.isOpened ? "expandable-checkbox-list_opened" : "")
    .expandable-checkbox-list__toggle
      h3.expandable-checkbox-list__title= options.title || "expandable checkbox list"
      span.expandable-checkbox-list__arrow.material-icons expand_more
    .expandable-checkbox-list__items-list
      each item in options.checkboxes
        +checkbox({
          label: item.label,
          isChecked: item.isChecked
        })