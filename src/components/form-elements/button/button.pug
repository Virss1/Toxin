mixin button_filled(options)
  button.button.button_filled(
    type="button"
    class=options.isForceHover ? "button_filled_force-hover" : ""
  )= options.caption

mixin button_bordered(options)
  .button.button_bordered(
    class=options.isForceHover ? "button_bordered_force-hover" : ""
  )
    button.button.button_bordered__body(type="button")= options.caption


//- options {
      caption: "string",
      isClear: boolean
    }
mixin button_link(options)
  button.button.button_link(
    type="button"
    class=options.isClear ? "button_link_clear" : ""
  )= options.caption

//- options: {
      isClicked: boolean,
      likesCount: number
    }
mixin button_like(options)
  - var randID = Math.floor(Math.random() * (1 - 1000) + 1000)
  .button.button_like(
    class=options.isClicked ? "button_like_clicked" : ""
    id=`like-${randID}`
  )
    .button_like__body
      span.button_like__heart.material-icons favorite_border
      span.button_like__count= options.likesCount

mixin button_wide(options)
  button.button.button_filled.button_wide(type="submit")= options.caption
    span.button_wide__arrow.material-icons arrow_forward