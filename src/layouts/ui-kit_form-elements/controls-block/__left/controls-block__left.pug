section.controls-block__left
  .control-container
    +textField({
      title: 'text field',
      placeholder: 'Email'
    })
  .control-container
    +textField({
      title: 'text field',
      placeholder: 'Email',
      value: 'This is pretty awesome'
    })
  .control-container
    h3.control-container__title dropdown
    //- dropdown(id, type, title, hasButtons, options[name, defaultcount, maxcount, declensions], isOpened)
    +dropdown(
      'guests1', 'guests', 'Сколько гостей', true, [
        { name: 'взрослые', maxcount: '10', 
         declensions: [
           'гость',
           'гостя',
           'гостей'
         ]
        },
        { name: 'дети', maxcount: '5' },
        { name: 'младенцы', maxcount: '6',
          declensions: [
            'младенец',
            'младенца',
            'младенцев'
          ]
        }
      ])
  .control-container
    h3.control-container__title masked text field
    +textFieldMasked
  .control-container_row
    .control-container
      h3.control-container__title date dropdown
      +dateDropdown('date1', true)
    .control-container
      h3.control-container__title date dropdown
      +dateDropdown('date2')
  .control-container
    h3.control-container__title filter date dropdown
    //- +dropdown('date-dropdown_filter', '19 авг - 23 авг')
  .control-container
    h3.control-container__title subscription text field
    +subscriptionField