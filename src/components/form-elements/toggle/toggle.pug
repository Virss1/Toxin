      label: "string",
      isChecked: boolean
    }
mixin toggle(options)
  - var randID = Math.floor(Math.random() * (1 - 1000) + 1000)
  label.toggle
    input.toggle__switch(
      id=`t-${randID}`
      type="checkbox"
      checked=options.isChecked
    )
    span.toggle__label #{options.label || "Получать спецпредложения"}