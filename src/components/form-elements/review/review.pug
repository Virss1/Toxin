include /form-elements/button/button

//-
  options: {
    photoName: "string",
    name: "string",
    date: "string",
    like: {
      count: number,
      isClicked: boolean
    },
    text: "string"
  }

mixin review(options)
  -
    const {
      photoName,
      name,
      date,
      like,
      text,
    } = options

  .review
    img.review__reviewer-photo(
      src=require(`@form-elements/review/avatars/${photoName}`).default
      alt="reviewer photo"
    )
    .review__title
      h4.review__reviewer-name= name
      span.review__date= date
    +like-button({
      isClicked: like.isClicked,
      likesCount: like.count,
    })
    p.review__text= text