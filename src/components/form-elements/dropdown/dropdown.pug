//-   select.dropdown(class=classname ? classname : '')
//-     each option in options.length ? options : ['No options']
//-       option= option
mixin dropdown(id, type, title, hasButtons, options, isOpened)
  .iqdropdown(id=id, class='dropdown_' + type, data-title=title, class=isOpened ? 'menu-open' : '' )
    p.iqdropdown-selection(id=id)
    .iqdropdown-menu
      each item, index in options
        .iqdropdown-menu-option(data-id='item'+(index+1) data-defaultcount=item.defaultcount ? item.defaultcount : "0" data-maxcount=item.maxcount data-declensions=item.declensions)
          div
            p.iqdropdown-item= item.name
      if hasButtons
        .iqdropdown__controls
          button.iqdropdown__button.button.button_link.button_link_clear.button_link_clear_hidden Очистить
          button.iqdropdown__button.button.button_link Применить