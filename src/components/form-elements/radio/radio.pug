mixin radio(options)
  - var randID = Math.floor(Math.random() * (1 - 1000) + 1000)
  .input-button.radio
    input.switch.radio__switch(
      type='radio',
      name=options.name,
      id=`r-${randID}`,
      checked=options.isChecked
    )
    label.input-button__label.radio__label(for=`r-${randID}`)= options.label