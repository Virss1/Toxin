include /form-elements/dropdown/dropdown

section.section-row.dropdowns-block
  section.dropdowns-block__left
    +dropdown-amenities({
      description: "default",
      hasButtons: false
    })
    +dropdown-amenities({
      description: "expanded",
      isOpened: true,
      isAlwaysOpened: true,
      defaultCounts: [ 2, 2, 0 ]
    })
  section.dropdowns-block__middle
    +dropdown-guests({
      isOpened: true,
      isAlwaysOpened: true
    })
  section.dropdowns-block__right
    +dropdown-guests({
      isOpened: true,
      isAlwaysOpened: true,
      defaultCounts: [ 2, 1, 0 ]
    })