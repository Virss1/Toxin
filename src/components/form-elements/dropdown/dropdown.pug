mixin dropdown(type, title, hasButtons, options)
  .iqdropdown(class='dropdown_' + type, data-title=title)
    p.iqdropdown-selection
    .iqdropdown-menu
      each item, index in options
        .iqdropdown-menu-option(data-id='item'+(index+1) data-maxcount=item.maxcount data-declensions=item.declensions ? item.declensions : '')
          div
            p.iqdropdown-item= item.name
      if hasButtons
        .iqdropdown__controls
          button.iqdropdown__button.button.button_link.button_link_clear.button_link_clear_hidden Очистить
          button.iqdropdown__button.button.button_link Применить