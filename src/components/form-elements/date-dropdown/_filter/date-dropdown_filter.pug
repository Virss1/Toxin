mixin dateDropdownFilter(options)
  - var randID = Math.floor(Math.random() * (1 - 1000) + 1000)
  .date-dropdown.date-dropdown_filter.control-container
    h3.control-container__title #{options.title || "filter date dropdown"}
    .date-dropdown__container.date-dropdown_filter__container
      button.date-dropdown__arrow.date-dropdown_filter__arrow.material-icons expand_more
      input.date-dropdown__input.date-dropdown_filter__input.datepicker-here(
        type="text"
        placeholder="ДД.ММ.ГГГГ"
        data-classes=`calendar-${randID}`
        data-multiple-dates-separator=" - "
        data-date-format="dd M"
        data-keyboard-nav="false"
        data-select-date=options.selectDate
        readonly
      )