extends /../layouts/ui-kit/ui-kit

block variables
  -
    const title = "Cards"
    const pageClass = "cards"
    const modifierClass = "grey"

block content
  include /cards/card-container/card-container
  include /cards/search-card/search-card
  include /cards/registration-card/registration-card
  include /cards/booking-card/booking-card
  include /cards/login-card/login-card
  include /cards/calendar-card/calendar-card

  article.cards__card
    +search-card
  article.cards__card
    +registration-card
  article.cards__card
    +booking-card
  article.cards__card
    +login-card
  article.cards__calendar-card
    +calendar-card({
      selectDate: [
        [2020, 10, 19],
        [2020, 10, 23],
      ],
    })