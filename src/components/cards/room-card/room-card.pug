include /cards/room-main-info/room-main-info
include /form-elements/rate-button/rate-button

mixin room-card(options)
  .room-card(
    href="#"
  )
    .room-card__slider
      .slider
        a.slides(href="#")
          each num in [1, 2, 3, 4]
            img(
              class=`image${num}`
              src=require(`../../../res/images/room-cards/${options.number}/image${num}.jpg`).default
              alt=`room #${options.number}, image #${num}`
            )
        .prev.slider__prev
          div.slider__prev-arrow.material-icons expand_more
        .next.slider__next
          div.slider__next-arrow.material-icons expand_more
        .position.slider__position(disabled)
    a.room-card__info(href="#")
      .room-card__header
        +room-main-info({
          number: options.number,
          isLux: options.isLux,
          price: options.price,
          isSmall: true,
        })
      .room-card__rating
        +rate-button({rating: options.rating,})
        span.room-card__ratings
          b.room-card__ratings-count= options.reviewsCount
