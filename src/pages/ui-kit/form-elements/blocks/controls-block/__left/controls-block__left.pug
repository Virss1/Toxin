include /form-elements/text-field/text-field
include /form-elements/dropdown/dropdown
include /form-elements/date-dropdown/date-dropdown

section.controls-block__left
  +textField({
    type: "email",
    title: "text field",
    placeholder: "Email",
    description: "default"
  })
  +textField({
    title: "text field",
    value: "This is pretty awesome",
    forceHoverStyle: true,
    description: "hover / focus"
  })
  +dropdown-guests({
    description: "default",
  })
  +textField({
    modifier: "masked",
    title: "masked text field",
    placeholder: "ДД.ММ.ГГГГ",
    description: "default"
  })
  .control-container_vertically-spacey
    +dateDropdown({})
  .control-container_vertically-spacey
    +dateDropdownFilter({
      selectDate: [
        [2020, 08, 19],
        [2020, 08, 23]
      ]
    })
  +textField({
    modifier: "subscription",
    type: "email",
    title: "subscription text field",
    placeholder: "Email"
  })